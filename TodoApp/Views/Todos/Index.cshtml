@model IEnumerable<TodoApp.Models.Todo>

<h2>Todo List</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-action="Index" asp-route-filter="all" class="btn @(ViewBag.CurrentFilter == "all" ? "btn-primary" : "btn-outline-primary")">
            All
        </a>
        <a asp-action="Index" asp-route-filter="completed" class="btn @(ViewBag.CurrentFilter == "completed" ? "btn-success" : "btn-outline-success")">
            Completed
        </a>
        <a asp-action="Index" asp-route-filter="pending" class="btn @(ViewBag.CurrentFilter == "pending" ? "btn-warning" : "btn-outline-warning")">
            Pending
        </a>
    </div>

    <form asp-action="Index" method="get" class="d-inline">
        <select name="sort" onchange="this.form.submit()" class="form-select w-auto d-inline">
            <option value="duedate_asc" selected="@(ViewBag.CurrentSort == "duedate_asc")">Due Date ↑</option>
            <option value="duedate_desc" selected="@(ViewBag.CurrentSort == "duedate_desc")">Due Date ↓</option>
        </select>
        <input type="hidden" name="filter" value="@ViewBag.CurrentFilter" />
    </form>

    <a asp-action="Create" class="btn btn-success">+ Create New Todo</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Completed</th>
            <th>Category</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DueDate?.ToShortDateString()</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge bg-success">Done</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>
                <td>@item.Category?.Name</td>
                <td>@item.User?.FullName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
