@model IEnumerable<TodoApp.Models.Category>

    <h2>Categories</h2>

    <p>
        <a asp-action="create" class="btn btn-success" >+ Create Category</a>
    </p>

    <table class="table table-striped table-bordered"> 
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Todos</th>
            <th></th>
        </tr>
        </thead>
        <tbody>

            @foreach(var c in Model)
            {
            <tr>
                <td>@c.Name</td>
                <td>@(c.Todos?.Count ?? 0)</td> <!-- shows how many todos (if navigation property populated) -->
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>  
</table>